                    <button type="button" class="close" data-dismiss="alert">&times;</button> {{ message }}
                    {# {{ message }} #}
                </div>
                
            {% endfor %}            
            
            <p><a href="/"> Retour Ã  la page d' accueil</a></p>
        </div>
    </div>
</section>
{% endblock %}
