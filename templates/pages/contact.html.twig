{% extends 'base.html.twig' %}

{% block title %}<title>Quantum - Contact</title>{% endblock %}

{% block banner %}

    <div id="banner-area" class="banner-area" style="background-image:url(/assets/images/banner/banner1.jpg)">
    <div class="banner-text">
        <div class="container">
            <div class="row">
            <div class="col-lg-12">
                <div class="banner-heading">
                    <h1 class="banner-title">Contact</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="#">Quantum</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Contact</li>
                        </ol>
                    </nav>
                </div>
            </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div><!-- Banner text end -->
    </div><!-- Banner area end --> 

{% endblock %}

{% block content %}

    <section id="main-container" class="main-container">
    <div class="container">

        <div class="row text-center">
        <div class="col-12">
            <h2 class="section-title">Nous rejoindre ?</h2>
            <h3 class="section-sub-title">Nos contacts</h3>
        </div>
        </div>
        <!--/ Title row end -->

           {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>                                
                {{ message }}
            </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>                                
                    {{ message }}
                </div>
            {% endfor %}

        <div class="row">

            <div class="col-md-4">
                <div class="ts-service-box-bg text-center h-100">
                <span class="ts-service-icon icon-round">
                    <i class="fas fa-map-marker-alt mr-0"></i>
                </span>
                <div class="ts-service-box-content">
                    <h4>Adresse</h4>
                    <p>{{content.address}}</p>
                </div>
                </div>
            </div><!-- Col 1 end -->

            <div class="col-md-4">
                <div class="ts-service-box-bg text-center h-100">
                <span class="ts-service-icon icon-round">
                    <i class="fa fa-envelope mr-0"></i>
                </span>
                <div class="ts-service-box-content">
                    <h4>Email</h4>
                    <p>
                        <a href="#contact-form">Contactez nous ici</a>
                    </p>
                    {# {% for item in content.emailBlock %}
                    <p>{{item.email}}</p>
                    {% endfor %}                 #}
                </div>
                </div>
            </div><!-- Col 2 end -->

            <div class="col-md-4">
                <div class="ts-service-box-bg text-center h-100">
                <span class="ts-service-icon icon-round">
                    <i class="fa fa-phone-square mr-0"></i>
                </span>
                <div class="ts-service-box-content">
                    <h4>Téléphone</h4>
                    {% for item in content.telBlock %}
                    <p>{{item.tel}}</p>
                    {% endfor %}                 
                    
                </div>
                </div>
            </div><!-- Col 3 end -->

        </div><!-- 1st row end -->


        {% if content.map is not null %}
        <div class="gap-60"></div>
          <div class="google-map"> 
            <iframe style="border:0; width: 100%; height: 270px;" src="{{content.map}}" frameborder="0" allowfullscreen></iframe>
            {# <div id="map" class="map" data-latitude="6.136370660454237" data-longitude="1.2485837055226476"  data-marker-name="Constra"></div> #}
          </div>
        {% endif %}

        <div class="gap-40"></div>

        <div class="row">
        <div class="col-md-12">
            <h3 class="column-title text-center mt-4">Nous aimerions vous lire</h3>

            <form id="contact-form" action="{{path('web_contact')}}" method="post" role="form">
                <div class="error-container"></div>
                <div class="row">
                    <div class="col-md-4">
                    <div class="form-group">
                        <label>Nom et Prénoms</label>
                        <input class="form-control form-control-name" name="fullName" id="fullName" placeholder="" type="text" required>
                    </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control form-control-email" name="email" id="email" placeholder="" type="email"
                        required>
                    </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Téléphone</label>
                            <input class="form-control " name="telephone" id="telephone" placeholder="Exemple: +228 XX XX XX XX" >
                        </div>
                    </div>
                    
                
                </div>
                <div class="form-group">
                    <label>Entreprise</label>
                    <input class="form-control " name="entreprise" id="entreprise" placeholder="" >
                </div>
                
                <div class="form-group">
                    <label>Objet</label>
                    <input class="form-control " name="objet" id="objet" placeholder="" required>
                </div>

                <div class="form-group">
                    <label>Message</label>
                    <textarea class="form-control form-control-message" name="message" id="message" placeholder="" rows="10"
                    required></textarea>
                    <input type="hidden" name="recaptcha-response" id="recaptchaResponse">
                </div>
                <div class="text-right"><br>
                    <button class="btn btn-primary solid blank" type="submit">Envoyer Message</button>
                </div>
            </form>
        </div>

        </div><!-- Content row -->
    </div><!-- Conatiner end -->
    </section><!-- Main container end -->

{% endblock %}

{% block javascripts %}
    <script src="https://www.google.com/recaptcha/api.js?render=6Lcco4QpAAAAAOePvPxh5DwGcbeYoCjQY-tfWIxm"></script>
    <script>

    const key="6Lcco4QpAAAAAOePvPxh5DwGcbeYoCjQY-tfWIxm";

       
        grecaptcha.ready(function() {
            grecaptcha.execute(key, {action: 'contact'}).then(function(token) {
                document.getElementById("recaptchaResponse").value = token;
            });
        }); 
    </script>

{% endblock %}